<%-
  p_cmd = "/sw/hprc/sw/bio/GCATools/scripts/gpuavail -c"
  begin
    output, status = Open3.capture2e(p_cmd)
    if status.success?
      _list_config = output.split("\n").map(&:strip).reject(&:blank?)
    else
      raise output
    end
  rescue => e
    _list_config = ['CHECK', 'CONFIG']
    p_error = e.message.strip
  end
  a_cmd = "/sw/hprc/sw/bio/GCATools/scripts/gpuavail -a"
  begin
    output, status = Open3.capture2e(a_cmd)
    if status.success?
      _list_avail = output.split("\n").map(&:strip).reject(&:blank?)
    else
      raise output
    end
  rescue => e
    _list_avail = ['ERROR CHECK CONFIG']
    p_error = e.message.strip
  end
-%>
---
title: "HPRC Website Development"
cluster: "faster"
attributes:
  bc_vnc_resolution:
    required: true
  bc_account:
    help: "This field is optional."
  bc_num_hours:
    label: "Number of hours (max 168)"
    min: 1
    max: 168
  total_memory:
    label: "Total GB Memory (max 240)"
    widget: "number_field"
    value: 3
    min: 3
    max: 240
    step: 1
  cpus_per_task:
    label: "Number of cores (max 64)"
    widget: "number_field"
    value: 1
    min: 1
    max: 64
    step: 1
  node_type: 
    widget: select
    label: "Node type"
    options:
      - [
            "non-GPU", "non-GPU",
            data-hide-num-gpus: true,
        ]
  font_size:
    widget: select
    label: "Font size"
    options:
      - ['small', '9']
      - ['Medium', '12']
      - ['LARGE', '18']
      - ['X-LARGE', '24']
  email:
    help: "email address must be provided if you want to receive an email when the session starts."

form:
  - bc_num_hours
  - cpus_per_task
  - total_memory
  - font_size
  - node_type  
  - bc_account
  - bc_vnc_resolution
  - email
  - bc_email_on_started